{% extends 'layout.njk' %}

{% block content %}
    
    <section class="login container form"> {# This section has the "container" to hold the 90% width vh # - Same on header - and class "form"#}
        <form method="POST" action="/users/login">
            <div class="header">
                <h3>Entrar</h3> 
            </div>

            <div class="fields">
                {% include "session/fields.njk" %}
            </div>

            <button class="button" type="submit">Entrar</button>    

            <div class="footer">
                <ul>
                    <li><a href="/users/register">Registre-se</a></li>
                    <li><a href="/users/forgot-password">Esqueci a senha</a></li>
                </ul>
            </div>   
        </form>     
    </section>

{% endblock content %}